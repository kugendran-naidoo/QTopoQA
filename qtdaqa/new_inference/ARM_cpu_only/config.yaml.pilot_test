# Inference configuration for the 24-D edge TopoQA model.

# Source data (raw evaluation structures) and working directories
data_dir: ../../../datasets/training/adjusted/pilot_batch_Dockground_MAF2
label_file: ../../../datasets/training/adjusted/pilot_batch_Dockground_MAF2/label_info_Dockground_MAF2.csv
work_dir: ./output/pilot_batch/work
output_file: ./output/pilot_batch/results/inference_results.csv
checkpoint_path: ../../new_model_training/ARM_cpu_only/best.ckpt

batch_size: 32
num_workers: 0

# Builder options
builder:
  jobs: 12
  topology_dedup_sort: false
  dump_edges: true

reuse_existing_graphs: false
use_checkpoint_schema: true

# Optional overrides (used only if use_checkpoint_schema is false)
edge_schema:
  dim: 24
  use_layer_norm: true
  bands:
    - {label: short, min_distance: 0.0, max_distance: 6.0}
    - {label: medium, min_distance: 6.0, max_distance: 10.0}
    - {label: long, min_distance: 10.0, max_distance: 14.0}
topology_schema:
  vector_dim: 140
